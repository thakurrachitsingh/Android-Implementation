<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/services_fragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.androidimplementations.MainFragment"
        android:label="mainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_nav_to_recyclerview"
            app:destination="@id/myRecyclerViewFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/myRecyclerViewFragment"
        android:name="com.example.androidimplementations.implementations.recyclerview.RecyclerViewFragment"
        android:label="recyclerViewFragment"
        tools:layout="@layout/fragment_recycler_view">
    </fragment>
    <fragment
        android:id="@+id/services_fragment"
        android:name="com.example.androidimplementations.implementations.services.ServicesFragment"
        android:label="ServiceFragment"
        tools:layout="@layout/fragment_services"/>
</navigation>